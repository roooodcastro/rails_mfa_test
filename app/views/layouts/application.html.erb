<!DOCTYPE html>
<html>
<head>
  <title>MfaTest</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<nav class="navbar navbar-dark bg-dark justify-content-between mb-5">
  <%= link_to 'Rails 2FA Test', root_path, class: 'navbar-brand' %>

  <div>
    <%= link_to 'Sign up', new_user_path, class: 'btn btn-primary' %>
    <% if current_user.present? %>
      <%= link_to 'Sign out', sessions_path, method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'Sign in', new_session_path, class: 'btn btn-secondary' %>
    <% end %>
  </div>
</nav>

<div class="container">
  <%= bootstrap_flash %>

  <%= yield %>
</div>
</body>
</html>
