<h1>Rails 2FA Test</h1>

<% if @users.present? %>
  <div class="card mb-3">
    <div class="card-header"><h3 class="card-title my-0">Users</h3></div>
    <table class="table table-hover my-0">
      <thead>
      <tr>
        <th>Name</th>
        <th>Using 2FA?</th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.mfa_secret.present? %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<% if current_user&.admin? %>
  <div class="card card-body d-block">
    <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
  </div>
<% end %>
